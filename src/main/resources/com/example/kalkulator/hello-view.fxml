<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.kalkulator.HelloController"
          hgap="10" vgap="10"
          style="-fx-background-color:#2C3E50;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- ==== COLUMN & ROW RESPONSIVE ==== -->
    <columnConstraints>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints percentHeight="15"/>
        <RowConstraints percentHeight="17"/>
        <RowConstraints percentHeight="17"/>
        <RowConstraints percentHeight="17"/>
        <RowConstraints percentHeight="17"/>
        <RowConstraints percentHeight="17"/>
    </rowConstraints>

    <!-- ==== DISPLAY ==== -->
    <TextField fx:id="display"
               text="0"
               editable="false"
               alignment="CENTER_RIGHT"
               GridPane.rowIndex="0"
               GridPane.columnIndex="0"
               GridPane.columnSpan="4"
               style="-fx-font-size:36px;
                      -fx-background-color:#ECF0F1;
                      -fx-text-fill:#2C3E50;"/>

    <!-- ==== ROW 1 ==== -->
    <Button text="C" onAction="#onClear"
            GridPane.rowIndex="1" GridPane.columnIndex="0"
            maxWidth="Infinity" maxHeight="Infinity"/>
    <Button text="âŒ«" onAction="#onBackspace"
            GridPane.rowIndex="1" GridPane.columnIndex="1"
            maxWidth="Infinity" maxHeight="Infinity"/>
    <Button text="/" onAction="#onOperator"
            GridPane.rowIndex="1" GridPane.columnIndex="2"
            maxWidth="Infinity" maxHeight="Infinity"/>
    <Button text="*" onAction="#onOperator"
            GridPane.rowIndex="1" GridPane.columnIndex="3"
            maxWidth="Infinity" maxHeight="Infinity"/>

    <!-- ==== ROW 2 ==== -->
    <Button text="7" onAction="#onNumber"
            GridPane.rowIndex="2" GridPane.columnIndex="0"
            maxWidth="Infinity" maxHeight="Infinity"/>
    <Button text="8" onAction="#onNumber"
            GridPane.rowIndex="2" GridPane.columnIndex="1"
            maxWidth="Infinity" maxHeight="Infinity"/>
    <Button text="9" onAction="#onNumber"
            GridPane.rowIndex="2" GridPane.columnIndex="2"
            maxWidth="Infinity" maxHeight="Infinity"/>
    <Button text="-" onAction="#onOperator"
            GridPane.rowIndex="2" GridPane.columnIndex="3"
            maxWidth="Infinity" maxHeight="Infinity"/>

    <!-- ==== ROW 3 ==== -->
    <Button text="4" onAction="#onNumber"
            GridPane.rowIndex="3" GridPane.columnIndex="0"
            maxWidth="Infinity" maxHeight="Infinity"/>
    <Button text="5" onAction="#onNumber"
            GridPane.rowIndex="3" GridPane.columnIndex="1"
            maxWidth="Infinity" maxHeight="Infinity"/>
    <Button text="6" onAction="#onNumber"
            GridPane.rowIndex="3" GridPane.columnIndex="2"
            maxWidth="Infinity" maxHeight="Infinity"/>
    <Button text="+" onAction="#onOperator"
            GridPane.rowIndex="3" GridPane.columnIndex="3"
            maxWidth="Infinity" maxHeight="Infinity"/>

    <!-- ==== ROW 4 ==== -->
    <Button text="1" onAction="#onNumber"
            GridPane.rowIndex="4" GridPane.columnIndex="0"
            maxWidth="Infinity" maxHeight="Infinity"/>
    <Button text="2" onAction="#onNumber"
            GridPane.rowIndex="4" GridPane.columnIndex="1"
            maxWidth="Infinity" maxHeight="Infinity"/>
    <Button text="3" onAction="#onNumber"
            GridPane.rowIndex="4" GridPane.columnIndex="2"
            maxWidth="Infinity" maxHeight="Infinity"/>
    <Button text="=" onAction="#onEquals"
            GridPane.rowIndex="4" GridPane.columnIndex="3"
            maxWidth="Infinity" maxHeight="Infinity"
            style="-fx-background-color:#27AE60; -fx-text-fill:white;"/>

    <!-- ==== ROW 5 ==== -->
    <Button text="0" onAction="#onNumber"
            GridPane.rowIndex="5" GridPane.columnIndex="0"
            GridPane.columnSpan="2"
            maxWidth="Infinity" maxHeight="Infinity"/>
    <Button text="." onAction="#onDecimal"
            GridPane.rowIndex="5" GridPane.columnIndex="2"
            maxWidth="Infinity" maxHeight="Infinity"/>

</GridPane>
